<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backround_start"
    >

    <include layout="@layout/toolbar"/>

    <include layout="@layout/layout_no_network"/>








<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/activity_tellwe_ll_tellwe"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\t我实实在在地告诉你们，一粒麦子不落在地里死了，仍旧是一粒，若是死了，就结出许多子粒来。"
            android:textSize="@dimen/textsize_actionbar"
            android:textStyle="bold"
            android:textColor="@color/textcolor_1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="【约12:24】"
            android:gravity="right"
            android:textSize="@dimen/textsize_actionbar"
            android:textColor="@color/textcolor_1"
            />

    </LinearLayout>




<LinearLayout
    android:id="@+id/activity_tellwe_ll_tellwe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"

    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QQ\t:"
            android:textSize="@dimen/textsize_actionbar"
            android:textColor="@color/textcolor_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="599878311"
            android:textSize="20sp"
            android:textColor="@color/textcolor_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="QQ交流群:"
            android:textSize="@dimen/textsize_actionbar"
            android:textColor="@color/textcolor_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="142590430"
            android:textSize="20sp"
            android:textColor="@color/textcolor_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_tellwe_ll_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱:"
            android:textSize="@dimen/textsize_actionbar"
            android:textColor="@color/textcolor_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bibleAsk@163.com"
            android:textSize="20sp"
            android:textColor="@color/textcolor_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="链接:"
            android:textSize="@dimen/textsize_actionbar"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="http://litonglu.bmob.cn/"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/activity_tellwe_ll_tellwe"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《圣经问答》APP开发的初衷，使我们在一定程度认识到自己对圣经的掌握程度，从而在主面前反省和调整。"
            android:textSize="@dimen/textsize_x"
            android:textColor="#840000"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\t现需有此志的弟兄姊妹加入(工作之余)，有此意向的弟兄姊妹请联系我们。求主带领并掌权！"
            android:textSize="@dimen/textsize_x"
            android:textColor="#840000"
            android:visibility="gone"
            />
    </LinearLayout>

</RelativeLayout>




</LinearLayout>