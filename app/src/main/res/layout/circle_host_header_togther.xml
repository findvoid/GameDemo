<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/white"
    >

    <ImageView
        android:id="@+id/friend_wall_pic"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_huoer"/>

    <ImageView
        android:id="@+id/friend_avatar"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignBottom="@id/friend_wall_pic"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_user_default"/>
    <TextView
        android:id="@+id/host_id"
        android:layout_width="wrap_content"
        android:minWidth="67dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/friend_avatar"
        android:layout_below="@id/friend_avatar"
        android:layout_marginTop="30dp"
        android:textColor="@color/textcolor_2"
        android:gravity="center_horizontal"
        tools:text="用户名"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/friend_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/message_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        tools:visibility="gone"
        >

        <ImageView
            android:id="@+id/message_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_loading_small"

            />

        <TextView
            android:id="@+id/message_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1条新消息"
            android:textColor="@color/white"
            android:textSize="16sp"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"/>
    </RelativeLayout>

</RelativeLayout>