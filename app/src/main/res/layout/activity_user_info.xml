<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rl_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_dim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_user_default"
                android:scaleType="centerCrop"
                />


            <LinearLayout
                android:id="@+id/ll_mine_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:background="@drawable/ripple_bg_tran"
                >

                <ImageView
                    android:id="@+id/rv_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_default"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称：圣经问答"
                    android:textSize="@dimen/textsize_18"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人说明：我不再是我，乃是基督在我里面或着"
                    android:textSize="@dimen/textsize_18"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>