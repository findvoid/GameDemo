<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backround_hui"
    android:weightSum="10"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >

<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/iv_spot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icons_ok"
        android:layout_centerHorizontal="true"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_spot"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        >

    <View
        android:layout_width="@dimen/line_d"
        android:layout_height="match_parent"
        android:background="@drawable/list_line"
        android:layout_gravity="center_horizontal"

        />

    </LinearLayout>

</RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        app:contentPadding="4dp"
        android:layout_marginBottom="18dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在路上"
                android:textSize="@dimen/textsize_18"
                android:textColor="@color/textcolor_1"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20170110 星期二"
                android:textSize="@dimen/textsize_16"
                android:layout_below="@+id/tv_type"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignParentRight="true"
                android:textColor="@color/textcolor_3"
                android:typeface="serif"
                />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18000"
                android:textSize="@dimen/textsize_18"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/tv_result"
                android:textColor="@color/textcolor_2"
                android:typeface="serif"
                />

             <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摩西五经"
                android:textSize="@dimen/textsize_16"
                android:layout_toRightOf="@+id/tv_result"
                android:textColor="@color/textcolor_2"
                 android:gravity="center"
                 android:layout_marginLeft="@dimen/activity_horizontal_margin"
                 />

</RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>